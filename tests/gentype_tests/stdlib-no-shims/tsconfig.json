{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
